{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ts-node": "ts-node",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config dist/orm.config.js",
    "db:migrate": "npm run build && npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm:migrations:run",
    "migration:run": "npm run build && npm run typeorm migration:run"
  },
  "dependencies": {
    "@google-cloud/datastore": "^9.0.0",
    "@google-cloud/firestore": "^7.7.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^8.4.7",
    "@nestjs/event-emitter": "^1.1.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.4.4",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "@nestjsx/crud": "^5.0.0-alpha.3",
    "@nestjsx/crud-typeorm": "^5.0.0-alpha.3",
    "@types/multer": "^1.4.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^8.3.4",
    "amqp-connection-manager": "^4.1.3",
    "amqplib": "^0.8.0",
    "blob": "^0.1.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express-session": "^1.17.2",
    "firebase-admin": "^12.1.1",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nestjs-typeorm-paginate": "^4.0.4",
    "nodemailer": "^6.9.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "sequelize": "^6.37.1",
    "swagger-ui-express": "^4.3.0",
    "twilio": "^4.18.0",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
